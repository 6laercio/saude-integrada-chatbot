{
  "name": "saude-integrada-chatbot",
  "version": "1.0.0",
  "description": "Chatbot de IA para a Clínica Saúde Integrada via WhatsApp",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "node --test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "check": "tsc --noEmit && pnpm lint && pnpm format:check",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --write"
    ],
    "*.{md,txt}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier --write"
    ]
  },
  "keywords": [
    "chatbot",
    "whatsapp",
    "openai",
    "healthcare"
  ],
  "author": {
    "name": "Laercio Nascimento",
    "email": "laercio@protonmail.ch",
    "url": "https://github.com/6laercio"
  },
  "contributors": [],
  "license": "MIT",
  "packageManager": "pnpm@10.7.0",
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/node": "^22.13.14",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/sensible": "^6.0.3",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.2",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0"
  }
}
